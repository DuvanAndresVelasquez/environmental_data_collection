<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TableThreeCaudalVolActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_s"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_s"
                android:layout_marginBottom="@dimen/margin_s"
                android:background="@color/black"
                android:gravity="center"
                android:text="Aseguramiento de calidad"
                android:textColor="@color/white" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:background="@drawable/border"
                    android:weightSum="12"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:padding="2dp"
                        android:background="@drawable/border"
                        android:text="CONTROL CALIDAD" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:padding="2dp"
                        android:text="REALIZADO?" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:padding="2dp"
                        android:text="OBSERVACIÓN" />





                </TableRow>

                <TableRow
                    android:background="@drawable/border"
                    android:weightSum="12">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:padding="2dp"
                        android:background="@drawable/border"
                        android:textSize="@dimen/font_small"
                        android:text="Blanco de Campo" />

                    <Spinner
                        android:id="@+id/Spinner_columna1_fila1_tabla3_caudal_vol_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:entries="@array/lista16"
                        android:minHeight="2dp"
                        android:spinnerMode="dialog"
                        android:background="@drawable/border"/>

                    <EditText
                        android:id="@+id/edit_text_columna2_fila1_tabla3_caudal_vol_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:padding="2dp"
                        android:background="@drawable/border" />

                </TableRow>

                <TableRow
                    android:background="@drawable/border"
                    android:weightSum="12">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:padding="2dp"
                        android:background="@drawable/border"
                        android:textSize="@dimen/font_small"
                        android:text="Duplicado de muestra" />

                    <Spinner
                        android:id="@+id/Spinner_columna1_fila2_tabla3_caudal_vol_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:entries="@array/lista16"
                        android:minHeight="2dp"
                        android:spinnerMode="dialog"
                        android:background="@drawable/border"/>

                    <EditText
                        android:id="@+id/edit_text_columna2_fila2_tabla3_caudal_vol_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:padding="2dp"
                        android:background="@drawable/border" />

                </TableRow>

                <TableRow
                    android:background="@drawable/border"
                    android:weightSum="12">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:padding="2dp"
                        android:background="@drawable/border"
                        android:textSize="@dimen/font_small"
                        android:text="Matriz Fortificada" />

                    <Spinner
                        android:id="@+id/Spinner_columna1_fila3_tabla3_caudal_vol_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:entries="@array/lista16"
                        android:minHeight="2dp"
                        android:spinnerMode="dialog"
                        android:background="@drawable/border"/>

                    <EditText
                        android:id="@+id/edit_text_columna2_fila3_tabla3_caudal_vol_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:padding="2dp"
                        android:background="@drawable/border" />

                </TableRow>

                <TableRow
                    android:background="@drawable/border"
                    android:weightSum="12">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:padding="2dp"
                        android:background="@drawable/border"
                        android:textSize="@dimen/font_small"
                        android:text="Testigo" />

                    <Spinner
                        android:id="@+id/Spinner_columna1_fila4_tabla3_caudal_vol_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:entries="@array/lista16"
                        android:minHeight="2dp"
                        android:spinnerMode="dialog"
                        android:background="@drawable/border"/>

                    <EditText
                        android:id="@+id/edit_text_columna2_fila4_tabla3_caudal_vol_13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:padding="2dp"
                        android:background="@drawable/border" />

                </TableRow>



            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Código asignado:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edit_text_codigo_Caudal_vol_tabla3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:backgroundTint="@color/colorRed"
                    android:textColor="@color/black">

                </EditText>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button_save_caudal_vol_tabla3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="99dp"
                    android:layout_marginLeft="99dp"
                    android:layout_marginBottom="@dimen/margin_s"
                    android:layout_marginTop="@dimen/margin_s"
                    android:backgroundTint="@color/black"
                    android:padding="@dimen/padding_button"
                    android:text="Guardar"
                    android:textColor="@color/white"
                    />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


